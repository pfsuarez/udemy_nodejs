<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <ul>
                    <% orders.items.forEach(order => { %>
                        <li>
                            <h1>#<%= order._id %></h1>
                            <ul>
                                <% order.products.forEach(product => { %>
                                    <li>
                                        <%= product.title %> (<%= product.qty %>)
                                    </li>
                                <% }); %>
                            </ul>
                            
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <h1>Nothing there!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>